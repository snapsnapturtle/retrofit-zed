        "terminal.ansi.white": "{{ .ForegroundMuted }}",
        "terminal.ansi.bright_white": "{{ .ForegroundDefault }}",

        "link_text.hover": "{{ .Blue }}",
        "search.match_background": null,
        "unreachable": null,

        "predictive": "{{ .ForegroundMuted }}",
        "predictive.border": null,

        "conflict": "{{ .Yellow }}",
        "conflict.border": null,
        "conflict.background": "{{ .YellowBackground }}",

        "created": "{{ .Green }}",
        "created.border": null,
        "created.background": "{{ .GreenBackground }}",

        "deleted": "{{ .Red }}",
        "deleted.border": null,
        "deleted.background": "{{ .RedBackground }}",

        "modified": "{{ .Blue }}",
