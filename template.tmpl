        "tab_bar.background": "{{ .BackgroundDefault }}",
        "tab.inactive_background": "{{ .BackgroundDefault }}",
        "tab.active_foreground": null,
        "tab.active_background": "{{ .BackgroundMuted }}",

        "panel.background": "{{ .BackgroundDefault }}",
