          "string.regex": {
            "color": "{{ .Violet }}"
          },
          "string.special": {
            "color": "{{ .Violet }}"
          },
          "string.special.symbol": {
            "color": "{{ .Violet }}"
          },
          "tag": {
            "color": "{{ .Cyan }}"
          },
          "text.literal": {
            "color": "{{ .Violet }}"
          },
          "title": {
            "color": "{{ .Orange }}"
          },
          "type": {
            "color": "{{ .Cyan }}"
          },
          "variable": {
            "color": null
          },
          "variable.special": {
            "color": "{{ .Orange }}",
            "font_style": "italic"
          },
          "editor.foreground": {
