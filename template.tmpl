        "syntax": {
          "attribute": {
            "color": "{{ .Green }}",
            "font_style": "normal",
            "font_weight": null
          },
          "boolean": {
            "color": "{{ .Red }}",
            "font_style": "italic",
            "font_weight": null
          },
          "comment": {
            "color": "{{ .Green }}",
            "font_style": "italic"
          },
          "comment.doc": {
            "color": "{{ .Green }}",
            "font_style": "italic"
          },
          "constant": {
            "color": "{{ .Red }}",
