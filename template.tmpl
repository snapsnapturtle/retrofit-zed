      "appearance": "dark",
      "style": {
        "background.appearance": "opaque",
        "accents": [],

        "border": "{{ .BorderDefault }}",
        "border.variant": "{{ .BorderDefault }}",
        "border.focused": "{{ .BorderDefault }}",
        "border.selected": null,
        "border.transparent": "{{ .Transparent }}",
        "border.disabled": "{{ .Transparent }}",

        "background": "{{ .BackgroundDefault }}",
        "surface.background": "{{ .BackgroundDefault }}",
        "elevated_surface.background": "{{ .BackgroundMuted }}",

        "element.active": "{{ .BackgroundHover }}",
        "element.background": "{{ .BackgroundSurface }}",
        "element.hover": "{{ .BackgroundHover }}",
        "element.selected": "{{ .BackgroundHover }}",
        "element.disabled": "{{ .BackgroundMuted }}",

        "ghost_element.active": "{{ .BackgroundHover }}",
        "ghost_element.background": "{{ .Transparent }}",
        "ghost_element.disabled": "{{ .BackgroundMuted }}",
        "ghost_element.hover": "{{ .BackgroundHover }}",
        "ghost_element.selected": "{{ .BackgroundHover }}",

        "drop_target.background": "{{ .BackgroundSurface }}80",

        "text": "{{ .ForegroundDefault }}",
        "text.muted": "{{ .ForegroundMuted }}",
        "text.placeholder": "{{ .ForegroundMuted }}80",
        "text.disabled": "{{ .ForegroundDisabled }}",
        "text.accent": "{{ .Yellow }}",

        "icon.accent": "{{ .Yellow }}",

        "title_bar.background": "{{ .BackgroundDefault }}",
        "toolbar.background": "{{ .BackgroundMuted }}",

        "status_bar.foreground": null,
