        "hidden.background": null,

        "hint": "{{ .ForegroundMuted }}80",
        "hint.border": "{{ .Transparent }}",
        "hint.background": "{{ .Transparent }}",

        "info": "{{ .Blue }}",
        "info.border": "{{ .Blue }}",
        "info.background": "{{ .BlueBackground }}",

        "success": "{{ .Green }}",
        "success.border": "{{ .Green }}",
        "success.background": "{{ .GreenBackground }}",

        "warning": "{{ .Orange }}",
        "warning.border": "{{ .Orange }}",
        "warning.background": "{{ .OrangeBackground }}",

        "error": "{{ .Red }}",
        "error.border": "{{ .Red }}",
        "error.background": "{{ .RedBackground }}",

        "players": [
          {
            "background": "{{ .Transparent }}",
            "cursor": "{{ .ForegroundDefault }}",
            "selection": "{{ .ForegroundDefault }}20"
          },
          {
            "background": "{{ .Transparent }}",
            "cursor": "{{ .Red }}",
            "selection": "{{ .RedBackground }}40"
          },
          {
            "background": "{{ .Transparent }}",
            "cursor": "{{ .Green }}",
            "selection": "{{ .GreenBackground }}40"
          },
          {
            "background": "{{ .Transparent }}",
            "cursor": "{{ .Yellow }}",
            "selection": "{{ .YellowBackground }}40"
          },
          {
            "background": "{{ .Transparent }}",
            "cursor": "{{ .Magenta }}",
            "selection": "{{ .MagentaBackground }}40"
          }
